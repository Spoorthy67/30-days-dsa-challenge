class Solution {
    public int shipWithinDays(int[] weights, int days) {
        int left=0;
        int right=0;
        for (int num:weights){
            left=Math.max(left,num);
            right+=num;
        }
        while(left<right){
            int mid=left+(right-left)/2;
            int need=1;
            int currentload=0;
            for(int num:weights){
                if(currentload+num>mid){
                    need+=1;
                    currentload=0;
                }
                currentload+=num;
            }
            if(need>days){
                left=mid+1;
            }else{
                right=mid;
            }
        }
        return left;
        
    }
}
